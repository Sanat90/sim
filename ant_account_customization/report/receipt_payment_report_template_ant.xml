<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- <template id="cash_register_header">
       
    </template> -->
    <template id="receipt_receipt_payment_report_document_ant">


        <t t-call="report.html_container">
            <div class="header">
                <div class="row">


                    <div class="col-md-8 text-center" style="float:left;align:center;margin-left:30%;">
                        <span>
                        SINGAPORE INSTITUTE OF MANAGEMENT SOCIETY
                            <br/>
                            <t t-if="o.report_type=='amount'">
                        	RECEIPT REGISTER BY PAYMENT MODE  (AMOUNT OF RECEIPT)</t>
                            <t t-if="o.report_type=='count'">
                        		RECEIPT REGISTER BY PAYMENT MODE  (TOTAL NUMBER OF RECEIPT)</t>
                        </span>
                        <span>

                        </span>
                    </div>


                    <div class="col-md-4 text-right" style="float:right;">
                        <ul class="list-inline">
                            <li>Page : 
                                <span class="page"/>
                            </li>
                            <li>To</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                            Date :
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                    </div>
                </div>
            </div>
            <div class="page">
                <t t-set="payment_mode_name" t-value="''"/>
                <t t-foreach="o.payment_method_ids" t-as="name">
                    <t t-set="payment_mode_name" t-value="payment_mode_name+','+name.name"/>
                </t>


                <table>
                    <tr>
                        <td>SYSTEM ID</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>MS</td>
                    </tr>
                    <tr>
                        <td>LOCATION</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>ALL</td>
                    </tr>
                    <tr>
                        <td>CASHIER ID</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            <span t-esc="o.user_id.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td>DATE RANGE</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            <t t-if="o.from_date"> From :<span t-esc="datetime.datetime.strptime(o.from_date, '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                            </t>
                            <t t-if="o.to_date">To :<span t-esc="datetime.datetime.strptime(o.to_date, '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                            </t>
                        </td>
                    </tr>


                </table>


                <br/>
                <table class="table text-center">
                    <thead style="border-top:2px solid black;border-bottom:2px solid black;">
                        <tr>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span>Cashier Id</span>
                            </th>
                            <t t-set="grand_total" t-value="0.0"/>
                            <t t-foreach="o.get_report_data()['header_list']" t-as="line">
                                    <th class="text-center" style="border-bottom: 1px solid black !important;">
                                        <span t-esc="line"/>
                                    </th>
                            </t>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span >Grand Total</span>
                            </th>

                        </tr>
                    </thead>
                    <tbody style="border-bottom: 1px solid transparent;">
                        <t t-set="total" t-value="0.0"/>
                            <tr >
                                <td style="border-top: 1px solid transparent;border-bottom: 1px solid transparent;">
                                    <span t-esc="o.user_id.name"/>
                                </td>
                                <t t-set="grand_total" t-value="0.0"/>
                                <t t-foreach="o.get_report_data()['total_list']" t-as="line">
                                    <td style="border-top: 1px solid transparent;border-bottom: 1px solid transparent;">
                                        <span t-esc="line"/>
                                    </td>
                                <t t-set="grand_total" t-value="grand_total+line"/>
                            </t>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span t-esc="grand_total"/>
                            </th>
                        </tr>
                    </tbody>
                </table>

                <br/>
                                <table class="table text-center">
                    <thead style="border-top:2px solid black;border-bottom:2px solid black;">
                        <tr>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span>Month</span>
                            </th>
                            <t t-set="grand_total" t-value="0.0"/>
                            <t t-foreach="o.get_report_data()['month_header']" t-as="line">
                                    <th class="text-center" style="border-bottom: 1px solid black !important;">
                                        <span t-esc="line"/>
                                    </th>
                            </t>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span >Grand Total</span>
                            </th>

                        </tr>
                    </thead>
                    <tbody style="border-bottom: 1px solid transparent;">
                        <t t-set="total" t-value="0.0"/>
                        <t t-foreach="o.get_report_data()['month_data']" t-as="row_line">
                            <tr >
                                <t t-set="grand_total" t-value="0.0"/>
                                <t t-foreach="row_line" t-as="line">
                                    <td style="border-top: 1px solid transparent;border-bottom: 1px solid transparent;">
                                        <span t-esc="line"/>
                                    </td>
                                    <t t-if="line_index > 0">
                                        <t  t-set="grand_total" t-value="grand_total+line"/>
                                    </t>
                            </t>
                            <th class="text-center" style="border-bottom: 1px solid black !important;">
                                <span t-esc="grand_total"/>
                            </th>
                        </tr>

                        </t>
                    </tbody>
                </table>

                <br/>

                <table>

                    <tr>
                        <th>SELECTION CRITERIA</th>
                    </tr>

                    <tr>
                        <td>SYSTEM ID</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>MS</td>
                    </tr>
                    <tr>
                        <td>LOCATION</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>ALL</td>
                    </tr>
                    <tr>
                        <td>CASHIER ID</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            <span t-esc="o.user_id.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td>PAYMENT MODE</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            <span t-esc="payment_mode_name[1:]"/>
                        </td>
                    </tr>

                    <tr>
                        <td>DATE RANGE</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            <t t-if="o.from_date"> From :<span t-esc="datetime.datetime.strptime(o.from_date, '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                            </t>
                            <t t-if="o.to_date">To :<span t-esc="datetime.datetime.strptime(o.to_date, '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                            </t>
                        </td>
                    </tr>


                    <tr>
                        <td>PRINT REPORT</td>
                        <td style="width:20px;text-align:center;"> : </td>
                        <td>
                            CASHIER REGISTER
                        </td>
                    </tr>

                </table>



            </div>

            <div class="footer" style="border-top: 1px solid black;">
                <ul class="list-inline">
                    <li>
           User :
                    </li>
                    <li>
                        <span t-esc="o.user_id.name"/>
                    </li>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>

                    <li>Departmen : </li>
                    <li>
            FIN
                    </li>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li/>

                    <li>Start Time :</li>
                    <li>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/>
                    </li>
                    <li/>
                    <li/>
                    <li/>
                    <li/>
                    <li>End Time :</li>
                    <li>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/>
                    </li>
                </ul>


            </div>

        </t>
    </template>

    <template id="receipt_receipt_payment_report_template_ant">
        <t t-foreach="docs" t-as="o">
            <t t-call="ant_account_customization.receipt_receipt_payment_report_document_ant" />
        </t>
    </template>

</odoo>
